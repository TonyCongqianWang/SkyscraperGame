<Window x:Class="SkyscraperGameGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkyscraperGameGui"
        mc:Ignorable="d"
        Title="SkyScraper Puzzle" Height="720" Width="1280"
        ResizeMode="NoResize">
    <Grid>
        <Grid HorizontalAlignment="Right" Margin="0,0,55,220" VerticalAlignment="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" MinWidth="160"/>
                <ColumnDefinition Width="Auto" MinWidth="80"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="AllowInFeasibleLabel" Content="allow infeasible:" Grid.Column="0" VerticalAlignment="Center" FontSize="20" Grid.ColumnSpan="1" Height="40" Margin="3,0,3,7"/>
            <CheckBox x:Name="AllowInFeasibleCheckbox" Grid.Column="1" VerticalAlignment="Center" FontSize="20" IsChecked="False" Height="20" Margin="3,5,3,0"/>
            <Label x:Name="FillPercentLabel" Content="fill percentage:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontSize="20" Grid.ColumnSpan="1" Height="40" Margin="3,0,3,7"/>
            <TextBox x:Name="FillPercentBox" Grid.Row="1" Grid.Column="1" FontSize="20" Grid.RowSpan="1" Height="30" Margin="3,0,3,0"/>
            <Label x:Name="RngSeedLabel" Content="rng seed:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontSize="20" Grid.ColumnSpan="1" Height="40" Margin="3,0,3,7"/>
            <TextBox x:Name="RngSeedBox" Grid.Row="2" Grid.Column="1" FontSize="20" Grid.RowSpan="1" Height="30" Margin="3,0,3,0"/>
        </Grid>
        <Button x:Name="NewGameButton" Content="New Game" HorizontalAlignment="Right" Height="95" Margin="0,0,70,70" VerticalAlignment="Bottom" Width="186" FontSize="30" Click="NewGameButton_Click"/>

        <Button x:Name="UnsetButton" Content="Unset Last" HorizontalAlignment="Right" Height="95" Margin="0,0,370,220" VerticalAlignment="Bottom" Width="186" FontSize="30" Click="UnsetButton_Click"/>

        <StackPanel HorizontalAlignment="Right" Margin="0,0,350,70" VerticalAlignment="Bottom">
            <Label Content="Moves" FontSize="22" FontWeight="Bold" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="130"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="MovesInfo" FontSize="20" Margin="0,0,10,0" TextWrapping="Wrap" Grid.Column="0">
                    Inserts:<LineBreak/>
                    Checks:<LineBreak/>
                    Unsets:<LineBreak/>
                    Total:
                </TextBlock>
                <TextBlock x:Name="MovesValues" FontSize="20" Margin="0,0,0,0" TextWrapping="Wrap" Grid.Column="1" TextAlignment="Right">
                    0<LineBreak/>
                    0<LineBreak/>
                    0<LineBreak/>
                    0
                </TextBlock>
            </Grid>
        </StackPanel>

        
        <Grid x:Name="GameGrid" HorizontalAlignment="Left" Height="646" Margin="28,0,0,0" VerticalAlignment="Center" Width="650" ShowGridLines="True"/>
    </Grid>
</Window>

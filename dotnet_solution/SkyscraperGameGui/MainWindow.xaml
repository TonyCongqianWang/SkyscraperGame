<Window x:Class="SkyscraperGameGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkyscraperGameGui"
        mc:Ignorable="d"
        Title="SkyScraper Puzzle" Height="750" Width="1300"
        ResizeMode="NoResize">
    <Grid>
        <Grid HorizontalAlignment="Right" Margin="0,0,65,200" VerticalAlignment="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Label x:Name="GridSizeLabel" Content="grid size:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="20" Grid.ColumnSpan="1" Height="40" Margin="3,0,3,7"/>
            <TextBox x:Name="GridSizeBox" Grid.Row="0" Grid.Column="1" FontSize="20" Grid.RowSpan="1" TextWrapping="Wrap" Height="30" Margin="3,0,3,0"/>
            <Label x:Name="AllowInFeasibleLabel" Grid.Row="1" Content="allow infeasible:" Grid.Column="0" VerticalAlignment="Center" FontSize="20" Grid.ColumnSpan="1" Height="40" Margin="3,0,3,7"/>
            <CheckBox x:Name="AllowInFeasibleCheckbox" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" FontSize="20" IsChecked="False" Height="20" Margin="3,5,3,0"/>
            <Label x:Name="GridFillPercentLabel" Content="grid %:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontSize="20" Grid.ColumnSpan="1" Height="40" Margin="3,0,3,7"/>
            <TextBox x:Name="GridFillPercentBox" Grid.Row="2" Grid.Column="1" FontSize="20" Grid.RowSpan="1" TextWrapping="Wrap" Height="30" Margin="3,0,3,0"/>
            <Label x:Name="ConstrFillPercentLabel" Content="constraint %:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" FontSize="20" Grid.ColumnSpan="1" Height="40" Margin="3,0,3,7"/>
            <TextBox x:Name="ConstrFillPercentBox" Grid.Row="3" Grid.Column="1" FontSize="20" Grid.RowSpan="1" TextWrapping="Wrap" Height="30" Margin="3,0,3,0"/>
            <Label x:Name="RngSeedLabel" Content="rng seed:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" FontSize="20" Grid.ColumnSpan="1" Height="40" Margin="3,0,3,7"/>
            <TextBox x:Name="RngSeedBox" Grid.Row="4" Grid.Column="1" FontSize="20" Grid.RowSpan="1" TextWrapping="Wrap" Height="30" Margin="3,0,3,0"/>
        </Grid>
        <Button x:Name="NewGameButton" Content="New Game" HorizontalAlignment="Right" Height="95" Margin="0,0,70,70" VerticalAlignment="Bottom" Width="210" FontSize="30" Click="NewGameButton_Click"/>

        <Button x:Name="UnsetButton" Content="Undo Insert" HorizontalAlignment="Right" Height="95" Margin="0,0,350,70" VerticalAlignment="Bottom" Width="210" FontSize="30" Click="UnsetButton_Click"/>

        <Grid HorizontalAlignment="Right"  VerticalAlignment="Bottom" Margin="0,0,330,200">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <Label Content="Puzzle Status:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" FontSize="15" FontWeight="Bold" Margin="3"/>
            <Label x:Name="PuzzleStatusLabel" Grid.Row="0" Grid.Column="1" FontSize="12" Width="200" Margin="3"/>

            <Label Content="Current Depth:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" FontSize="15" Margin="3"/>
            <Label x:Name="CurrentDepthLabel" Grid.Row="1" Grid.Column="1" FontSize="12" Width="200" Margin="3"/>

            <Label Content="Solving Time:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" FontSize="15" Margin="3"/>
            <Label x:Name="SolvingTimeLabel" Grid.Row="2" Grid.Column="1" FontSize="12" Width="200" Margin="3"/>
        </Grid>

        <StackPanel HorizontalAlignment="Right" Margin="0,0,50,400" VerticalAlignment="Bottom">
            <Label Content="Moves" FontSize="25" FontWeight="Bold" Margin="0,0,0,5"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="400"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="MovesInfo" FontSize="20" Margin="0,0,10,0" TextWrapping="Wrap" Grid.Column="0">
                    Inserts:<LineBreak/>
                    Checks:<LineBreak/>
                    Undos:<LineBreak/>
                    Total:
                </TextBlock>
                <TextBlock x:Name="MovesValuesLabel" FontSize="20" Margin="0,0,0,0" TextWrapping="Wrap" Grid.Column="1" TextAlignment="Right">
                    0<LineBreak/>
                    0<LineBreak/>
                    0<LineBreak/>
                    0
                </TextBlock>
            </Grid>
        </StackPanel>

        
        <Grid x:Name="GameGrid" HorizontalAlignment="Left" Height="650" Margin="30,30,0,0" VerticalAlignment="Top" Width="650" ShowGridLines="True"/>
    </Grid>
</Window>
